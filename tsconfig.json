{
  "compilerOptions": {
    "incremental": true,
    "checkJs": true,
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "src/*": ["src/*"],
      "app/*": ["*"]
    },
    "outDir": "./dist",
    "diagnostics": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "listEmittedFiles": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "./dist",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.js"
  ]
}
